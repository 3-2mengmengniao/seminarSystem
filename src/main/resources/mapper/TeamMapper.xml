<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.test.seminar.mapper.TeamMapper">
    <resultMap id="teamResultMap" type="com.test.seminar.entity.Team">
        <id property="id" column="id" />
        <association property="courseClass" column="id" javaType="com.test.seminar.entity.CourseClass" select="com.test.seminar.mapper.CourseClassMapper.getCourseClassByTeamId"/>
        <collection property="seminarScoreList" column="id" javaType="ArrayList" ofType="com.test.seminar.entity.SeminarScore" select="com.test.seminar.mapper.SeminarMapper.getSeminarScoreByTeamId"/>
        <collection property="roundScoreList" column="id" javaType="ArrayList" ofType="com.test.seminar.entity.RoundScore" select="com.test.seminar.mapper.RoundMapper.getRoundScoreByTeamId"/>
        <collection property="questionList" column="id" javaType="ArrayList" ofType="com.test.seminar.entity.Question" select="com.test.seminar.mapper.QuestionMapper.getQuestionByTeamId"/>
        <collection property="memberList" column="id" javaType="ArrayList" ofType="com.test.seminar.entity.Student" select="com.test.seminar.mapper.StudentMapper.getStudentByTeamId"/>
    </resultMap>

    <select id="getTeamByTeamId" resultMap="teamResultMap">
        SELECT id,team_name,leader_id,status,team_serial
        FROM team
        WHERE id=#{teamId}
    </select>

    <select id="getTeamByStudentIdAndCourseId" resultMap="teamResultMap">
        SELECT team.course_id,team_name,leader_id,status,team_serial
        FROM team,klass_student
        WHERE team.course_id=#{courseId} and  klass_student.student_id=#{studentId} and team.id=klass_student.team_id
    </select>

    <select id="getTeamByCourseId" resultMap="teamResultMap">
        SELECT id,team_name,leader_id,status,team_serial
        FROM team
        WHERE course_id=#{courseId}
    </select>

    <select id="getTeamBySeminarControlId" resultMap="teamResultMap">
        SELECT id,team_name,leader_id,status,team.team_serial
        FROM seminar_score,team
        WHERE klass_seminar_id=#{seminarControlId} and team.id=seminar_score.team_id
    </select>

    <insert id="insertTeam">
        insert into team(klass_id,course_id,team_name,leader_id,status,team_serial)
        values(#{classId},#{courseId},#{team.teamName},#{team.leaderId},#{team.status},#{team.teamSerial})
    </insert>

    <update id="updateTeamByTeamId">
        update team
        <set>
            <if test="team.teamName!=null">
                team_name=#{team.teamName},
            </if>
            <if test="team.status!=null">
                status=#{team.status},
            </if>
            <if test="team.teamSerial!=null">
                team_serial=#{team.teamSerial},
            </if>
        </set>
        where id=#{team.id}
    </update>

    <delete id="deleteTeamByTeamId">
        delete from team where id=#{teamId}
    </delete>

    <update id="updateCourseClassStudentTeamId">
        update klass_student
        <set>
            <if test="teamId!=null">
                team_id=#{teamId},
            </if>
            <if test="studentId!=null">
                student_id=#{studentId},
            </if>
        </set>
        where student_id=#{studentId} and klass_id=#{courseClassId}
    </update>
</mapper>